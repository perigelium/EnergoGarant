<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <LinearLayout
            android:id="@+id/llReturn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|left"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="17dp"
                android:background="@drawable/menuicon"/>

            <TextView
                android:id="@+id/tvPreviousPageTitle"
                fontPath="fonts/SF_UI_Text_Regular.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginLeft="17dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="17sp"
                tools:ignore="MissingPrefix"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvNewsTitle"
            fontPath="fonts/SF_UI_Text_Medium.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Сотрудники"
            android:textColor="@color/black"
            android:textSize="17sp"/>

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="#ffcccccc"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_marginBottom="0dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnShowWorkersList"
            fontPath="fonts/SF_UI_Text_Medium.ttf"
            android:layout_width="0dp"
            android:layout_height="29dp"
            android:layout_gravity="start"
            android:layout_marginLeft="17dp"
            android:layout_weight=".5"
            android:background="@drawable/button_blue_left"
            android:text="Список"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnShowWorkersMap"
            fontPath="fonts/SF_UI_Text_Medium.ttf"
            android:layout_width="0dp"
            android:layout_height="29dp"
            android:layout_gravity="end"
            android:layout_marginRight="17dp"
            android:layout_weight=".5"
            android:background="@drawable/button_white_right"
            android:text="Карта"
            android:textAllCaps="false"
            android:textColor="@color/blueDark"
            android:textSize="14sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:background="#ffcccccc"/>

        <ListView
            android:id="@id/android:list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#ffcccccc">
        </ListView>

</LinearLayout>